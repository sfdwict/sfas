<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/AppTheme.Button</item>
    </style>

    <style name="Dialog.Loading" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Loading...</item>
        <item name="DialogSpotColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="buttonStyle">@style/AppTheme.Button</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Button" parent="android:Widget.Button">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="GridTextViewStyle" parent="android:Widget.TextView">
        <item name="android:background">@drawable/bg_grid_text</item>
        <item name="android:paddingTop">@dimen/padding_xs</item>
        <item name="android:paddingBottom">@dimen/padding_xs</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_s</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="GridTextViewStyleMedium" parent="android:Widget.TextView">
        <item name="android:background">@drawable/bg_grid_text</item>
        <item name="android:paddingTop">@dimen/padding_xs</item>
        <item name="android:paddingBottom">@dimen/padding_xs</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_m</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="DialogLightTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
